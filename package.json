{
  "name": "@stencil/store",
  "version": "2.0.3",
  "description": "Store is a lightweight shared state library by the StencilJS core team. Implements a simple key/value map that efficiently re-renders components when necessary.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p . && npm run rollup",
    "prettier": "npm run prettier.base -- --write",
    "prettier.base": "prettier --cache 'src/**/*.ts'",
    "prettier.dry-run": "npm run prettier.base -- --list-different",
    "release": "np",
    "rollup": "rollup -c rollup.config.mjs",
    "test": "jest",
    "test.ci": "npm run test && npm run prettier.dry-run",
    "version": "npm run build"
  },
  "keywords": [
    "stencil",
    "redux",
    "global",
    "state",
    "tunnel",
    "hooks"
  ],
  "files": [
    "dist"
  ],
  "author": "Ionic Team",
  "license": "MIT",
  "homepage": "https://stenciljs.com/docs/stencil-store",
  "peerDependencies": {
    "@stencil/core": ">=2.0.0"
  },
  "devDependencies": {
    "@stencil/core": "^2.8.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^16.18.3",
    "jest": "^28.1.1",
    "jest-cli": "^28.1.1",
    "np": "^7.4.0",
    "prettier": "^2.2.1",
    "rollup": "^3.5.1",
    "ts-jest": "^28.0.4",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ionic-team/stencil-store.git"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.11.0"
  }
}
